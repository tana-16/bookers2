<main>
  <%= notice %>
  <div class="container px-5 px-sm-0">
  <div class="row">

     <%= render 'users/list', user: @user, users: @users%>

<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
        <tr>
         <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book.each do |book| %>
         <tr>
           <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %>
           </td>
           <td><%= link_to book.title, book_path(book.id)%></td>
           <td><%= book.body %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
    </div>
  </div>
</div>
</main>
