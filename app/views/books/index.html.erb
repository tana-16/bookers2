<main>
  <div class="container px-5 px-sm-0">
    <div>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %>
                </td>
                <td><%= link_to book.title, book_path(book.id)%></td>
                <td><%= book.body %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
  　</div>
　</div>
</main>

