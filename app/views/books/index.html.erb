<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @books, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= @books.name %></h3>

  <% if @books.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@books) %></p>
  <% end %>
  
</div>


<h1>New book</h1>
<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>