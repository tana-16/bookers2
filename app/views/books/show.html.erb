<main>
  <p class="alert alert-primary">
    <%= flash[:success] %>
  </p>
  <div class="container">
    <div class="row">
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
  	    <h2>Book detail</h2>
  		  <table class="table">
  		    <tbody>
  		      <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %><
                <%= link_to @user.name, user_path(@user.id)%>
              </td>
              <td><%= link_to @books.title%></td>
              <td><%= @books.body %></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
              <% end %>
              <% if @user == current_user %>
                <td><%= link_to "Destroy", book_path(@books.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger destroy_book_6892" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>